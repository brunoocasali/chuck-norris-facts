{
  "name": "chuck-norris-facts",
  "version": "0.0.0",
  "private": true,
  "description": "Ember.js app to show Chuck Norris facts",
  "repository": "https://github.com/brunoocasali/chuck-norris-facts",
  "license": "MIT",
  "author": "Bruno Casali @brunoocasali",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel 'lint:!(fix)'",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:!(ci)",
    "test:ci": "npm-run-all lint test:cov test:e2e:ci",
    "test:ember": "ember test",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "start:e2e": "COVERAGE=true ember serve",
    "test:cov": "LINTER=false COVERAGE=true ember test",
    "test:e2e": "cypress open",
    "test:e2e:ci": "start-server-and-test start:e2e http://localhost:4200 cy:run",
    "posttest": "npm run report:combined",
    "precopy:reports": "npm run mkdir:reports",
    "mkdir:reports": "mkdir reports || true",
    "cleanup:reports": "rm -rf *-coverage reports .nyc_output || true",
    "copy:reports": "cp cypress-coverage/coverage-final.json reports/from-cypress.json && cp unit-coverage/coverage-final.json reports/from-unit.json",
    "precombine:reports": "node bin/postcov.js && npm run copy:reports && mkdir .nyc_output || true",
    "combine:reports": "npx nyc merge reports && mv coverage.json .nyc_output/out.json",
    "prereport:combined": "npm run combine:reports",
    "report:combined": "npx nyc report --reporter=html --reporter=text-summary --reporter=json-summary --report-dir coverage && npm run cleanup:reports"
  },
  "devDependencies": {
    "@cypress/code-coverage": "3.9.2",
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^2.2.5",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "cypress": "^6.8.0",
    "ember-auto-import": "^1.10.1",
    "ember-cli": "~3.25.2",
    "ember-cli-app-version": "^5.0.0",
    "ember-cli-babel": "^7.26.1",
    "ember-cli-code-coverage": "1.0.2",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-htmlbars": "^5.7.1",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.1",
    "ember-concurrency": "^2.0.3",
    "ember-export-application-global": "^2.0.1",
    "ember-fetch": "^8.0.4",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-page-title": "^6.2.1",
    "ember-qunit": "^5.1.4",
    "ember-resolver": "^8.0.2",
    "ember-source": "~3.25.3",
    "ember-template-lint": "^3.1.1",
    "ember-keyboard": "^6.0.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-ember": "^10.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "loader.js": "^4.7.0",
    "lodash.snakecase": "^4.1.1",
    "miragejs": "^0.1.41",
    "npm-run-all": "^4.1.5",
    "nyc": "15.1.0",
    "prettier": "^2.2.1",
    "qunit": "^2.14.1",
    "qunit-dom": "^1.6.0",
    "start-server-and-test": "1.12.1"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "ember": {
    "edition": "octane"
  },
  "nyc": {
    "report-dir": "cypress-coverage",
    "reporter": [
      "json"
    ],
    "check-coverage": true,
    "statements": 80,
    "lines": 80,
    "branches": 80
  }
}
